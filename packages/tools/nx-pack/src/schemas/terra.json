{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TerraFusion Terra Schema",
  "description": "Schema for terra.json files in TerraFusion components and bundles",
  "type": "object",
  "required": ["id", "type", "name", "version", "description"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the component or bundle",
      "pattern": "^[a-z0-9-]+$"
    },
    "type": {
      "type": "string",
      "description": "Type of the component or bundle",
      "enum": ["service", "bundle", "plugin", "library"]
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the component or bundle"
    },
    "version": {
      "type": "string",
      "description": "Semantic version in the format x.y.z",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9\\.]+)?$"
    },
    "description": {
      "type": "string",
      "description": "Description of the component or bundle"
    },
    "license": {
      "type": "string",
      "description": "License identifier (e.g., MIT, Apache-2.0)"
    },
    "author": {
      "type": "string",
      "description": "Author of the component or bundle"
    },
    "homepage": {
      "type": "string",
      "description": "URL to the homepage or documentation",
      "format": "uri"
    },
    "repository": {
      "type": "string",
      "description": "URL to the source code repository",
      "format": "uri"
    },
    "dependencies": {
      "type": "array",
      "description": "List of dependencies in the format name@version",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+(@\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9\\.]+)?)?$"
      }
    },
    "settings": {
      "type": "object",
      "description": "Component-specific settings",
      "additionalProperties": true
    },
    "requirements": {
      "type": "object",
      "description": "System requirements",
      "properties": {
        "memory": {
          "type": "string",
          "description": "Memory requirement (e.g., 512Mi, 2Gi)",
          "pattern": "^\\d+[KMGT]i?$"
        },
        "cpu": {
          "type": "string",
          "description": "CPU requirement (e.g., 0.5, 1)",
          "pattern": "^\\d+(\\.\\d+)?$"
        },
        "storage": {
          "type": "string",
          "description": "Storage requirement (e.g., 1Gi, 10Gi)",
          "pattern": "^\\d+[KMGT]i?$"
        }
      }
    },
    "ports": {
      "type": "array",
      "description": "List of network ports",
      "items": {
        "type": "object",
        "required": ["name", "port"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Port name"
          },
          "port": {
            "type": "integer",
            "description": "Port number"
          },
          "protocol": {
            "type": "string",
            "description": "Network protocol",
            "enum": ["TCP", "UDP"],
            "default": "TCP"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata",
      "additionalProperties": true
    }
  }
}