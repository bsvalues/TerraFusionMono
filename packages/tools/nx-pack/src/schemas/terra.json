{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TerraFusion Component Schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the component",
      "pattern": "^[a-z0-9-]+$"
    },
    "type": {
      "type": "string",
      "description": "Type of the component",
      "enum": ["service", "bundle", "library", "tool"]
    },
    "name": {
      "type": "string",
      "description": "Display name of the component"
    },
    "version": {
      "type": "string",
      "description": "Semantic version of the component",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9\\.]+)?$"
    },
    "description": {
      "type": "string",
      "description": "Description of the component"
    },
    "maintainer": {
      "type": "string",
      "description": "Maintainer name and contact information"
    },
    "license": {
      "type": "string",
      "description": "License for the component"
    },
    "docs": {
      "type": "string",
      "description": "URL to documentation",
      "format": "uri"
    },
    "tags": {
      "type": "array",
      "description": "Tags for searchability",
      "items": {
        "type": "string"
      }
    },
    "contains": {
      "type": "array",
      "description": "List of components contained in a bundle",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+@\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9\\.]+)?$"
      }
    },
    "dependencies": {
      "type": "array",
      "description": "Dependencies for the component",
      "items": {
        "type": "string"
      }
    },
    "infra": {
      "type": "object",
      "description": "Infrastructure requirements",
      "properties": {
        "helmChart": {
          "type": "string",
          "description": "Path to Helm chart for deployment"
        },
        "requirements": {
          "type": "object",
          "description": "Resource requirements",
          "properties": {
            "cpu": {
              "type": "string",
              "description": "CPU requirements"
            },
            "memory": {
              "type": "string",
              "description": "Memory requirements"
            },
            "storage": {
              "type": "string",
              "description": "Storage requirements"
            }
          }
        },
        "ports": {
          "type": "array",
          "description": "Ports exposed by the component",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the port"
              },
              "containerPort": {
                "type": "integer",
                "description": "Container port"
              },
              "servicePort": {
                "type": "integer",
                "description": "Service port"
              },
              "protocol": {
                "type": "string",
                "description": "Protocol used",
                "enum": ["TCP", "UDP"]
              }
            },
            "required": ["name", "containerPort"]
          }
        }
      }
    },
    "config": {
      "type": "object",
      "description": "Configuration options",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["string", "number", "boolean", "object", "array"]
          },
          "description": {
            "type": "string"
          },
          "default": {
            "oneOf": [
              { "type": "string" },
              { "type": "number" },
              { "type": "boolean" },
              { "type": "object" },
              { "type": "array" }
            ]
          },
          "enum": {
            "type": "array"
          },
          "minimum": {
            "type": "number"
          },
          "maximum": {
            "type": "number"
          },
          "format": {
            "type": "string"
          },
          "pattern": {
            "type": "string"
          },
          "items": {
            "type": "object"
          },
          "required": {
            "type": "boolean"
          }
        },
        "required": ["type", "description"]
      }
    }
  },
  "required": ["id", "type", "name", "version", "description"],
  "allOf": [
    {
      "if": {
        "properties": {
          "type": { "enum": ["bundle"] }
        }
      },
      "then": {
        "required": ["contains"]
      }
    },
    {
      "if": {
        "properties": {
          "type": { "enum": ["service"] }
        }
      },
      "then": {
        "properties": {
          "infra": {
            "required": ["requirements"]
          }
        },
        "required": ["infra"]
      }
    }
  ]
}