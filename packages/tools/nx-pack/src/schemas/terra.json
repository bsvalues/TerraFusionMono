{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TerraFusion Component Specification",
  "description": "Schema for terra.json files that describe TerraFusion components and bundles",
  "type": "object",
  "required": ["id", "type", "name", "version", "description"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the component",
      "pattern": "^[a-z][a-z0-9-]*$"
    },
    "type": {
      "type": "string",
      "description": "Type of the component",
      "enum": ["service", "bundle", "plugin", "library"]
    },
    "name": {
      "type": "string",
      "description": "Human-readable name of the component"
    },
    "version": {
      "type": "string",
      "description": "Version of the component",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9\\.]+)?$"
    },
    "description": {
      "type": "string",
      "description": "Description of the component"
    },
    "maintainer": {
      "type": "string",
      "description": "Maintainer of the component"
    },
    "license": {
      "type": "string",
      "description": "License of the component"
    },
    "docs": {
      "type": "string",
      "description": "URL to documentation for the component",
      "format": "uri"
    },
    "tags": {
      "type": "array",
      "description": "Tags for the component",
      "items": {
        "type": "string"
      }
    },
    "dependencies": {
      "type": "array",
      "description": "Dependencies of the component",
      "items": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9-]*(@\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9\\.]+)?)?$"
      }
    },
    "contains": {
      "type": "array",
      "description": "Components contained in the bundle (only for type: bundle)",
      "items": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9-]*(@\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9\\.]+)?)?$"
      }
    },
    "infra": {
      "type": "object",
      "description": "Infrastructure requirements for the component",
      "properties": {
        "helmChart": {
          "type": "string",
          "description": "Path to Helm chart"
        },
        "requirements": {
          "type": "object",
          "description": "Resource requirements",
          "properties": {
            "cpu": {
              "type": "string",
              "description": "CPU requirements"
            },
            "memory": {
              "type": "string",
              "description": "Memory requirements"
            },
            "storage": {
              "type": "string",
              "description": "Storage requirements"
            }
          }
        },
        "ports": {
          "type": "array",
          "description": "Ports to expose",
          "items": {
            "type": "object",
            "required": ["name", "containerPort"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Port name"
              },
              "containerPort": {
                "type": "integer",
                "description": "Container port"
              },
              "servicePort": {
                "type": "integer",
                "description": "Service port"
              },
              "protocol": {
                "type": "string",
                "description": "Protocol",
                "enum": ["TCP", "UDP"]
              }
            }
          }
        }
      }
    },
    "config": {
      "type": "object",
      "description": "Configuration schema for the component",
      "additionalProperties": {
        "type": "object",
        "required": ["type", "description"],
        "properties": {
          "type": {
            "type": "string",
            "description": "Type of the configuration value",
            "enum": ["string", "number", "boolean", "array"]
          },
          "description": {
            "type": "string",
            "description": "Description of the configuration value"
          },
          "default": {
            "description": "Default value"
          },
          "required": {
            "type": "boolean",
            "description": "Whether the configuration value is required"
          },
          "enum": {
            "type": "array",
            "description": "Enumeration of possible values",
            "items": {}
          },
          "minimum": {
            "type": "number",
            "description": "Minimum value (for number type)"
          },
          "maximum": {
            "type": "number",
            "description": "Maximum value (for number type)"
          },
          "pattern": {
            "type": "string",
            "description": "Regular expression pattern (for string type)"
          },
          "items": {
            "type": "object",
            "description": "Schema for array items (for array type)",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["string", "number", "boolean", "object"]
              }
            }
          }
        }
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "type": { "enum": ["bundle"] }
        }
      },
      "then": {
        "required": ["contains"]
      }
    },
    {
      "if": {
        "properties": {
          "type": { "enum": ["service"] }
        }
      },
      "then": {
        "properties": {
          "infra": { "required": ["requirements"] }
        }
      }
    }
  ]
}