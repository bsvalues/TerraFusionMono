{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TerraFusion Component Manifest",
  "description": "Schema for TerraFusion component manifest files (terra.json)",
  "type": "object",
  "required": ["id", "type", "name", "version", "description"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the component",
      "pattern": "^[a-z0-9-]+$"
    },
    "type": {
      "type": "string",
      "description": "Type of component",
      "enum": ["service", "bundle", "plugin", "library"]
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the component"
    },
    "version": {
      "type": "string",
      "description": "Component version using semantic versioning",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9\\.]+)?$"
    },
    "description": {
      "type": "string",
      "description": "Description of the component"
    },
    "maintainer": {
      "type": "string",
      "description": "Maintainer information"
    },
    "license": {
      "type": "string",
      "description": "License information"
    },
    "docs": {
      "type": "string",
      "description": "URL to documentation",
      "format": "uri"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags for categorization"
    },
    "contains": {
      "type": "array",
      "description": "List of component references for bundles",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+(@\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9\\.]+)?)?$"
      }
    },
    "infra": {
      "type": "object",
      "description": "Infrastructure-related configuration",
      "properties": {
        "helmChart": {
          "type": "string",
          "description": "Path to Helm chart for deployment"
        },
        "requirements": {
          "type": "object",
          "description": "Resource requirements",
          "properties": {
            "cpu": {
              "type": "string",
              "description": "CPU requirements"
            },
            "memory": {
              "type": "string",
              "description": "Memory requirements"
            },
            "storage": {
              "type": "string",
              "description": "Storage requirements"
            }
          }
        },
        "ports": {
          "type": "array",
          "description": "Port configuration",
          "items": {
            "type": "object",
            "required": ["name", "containerPort", "servicePort", "protocol"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Port name"
              },
              "containerPort": {
                "type": "integer",
                "description": "Container port"
              },
              "servicePort": {
                "type": "integer",
                "description": "Service port"
              },
              "protocol": {
                "type": "string",
                "description": "Protocol",
                "enum": ["TCP", "UDP", "SCTP"]
              }
            }
          }
        }
      }
    },
    "dependencies": {
      "type": "array",
      "description": "List of dependencies",
      "items": {
        "type": "string"
      }
    },
    "config": {
      "type": "object",
      "description": "Configuration parameters",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "Type of configuration parameter",
            "enum": ["string", "number", "boolean", "object", "array"]
          },
          "description": {
            "type": "string",
            "description": "Description of the parameter"
          },
          "default": {
            "description": "Default value"
          },
          "enum": {
            "type": "array",
            "description": "Enumeration of allowed values"
          },
          "minimum": {
            "type": "number",
            "description": "Minimum value for number type"
          },
          "maximum": {
            "type": "number",
            "description": "Maximum value for number type"
          },
          "format": {
            "type": "string",
            "description": "Format hint for string values",
            "enum": ["date-time", "date", "time", "uri", "email", "hostname", "ipv4", "ipv6"]
          }
        },
        "required": ["type"]
      }
    }
  },
  "dependencies": {
    "type": {
      "oneOf": [
        {
          "properties": {
            "type": { "enum": ["bundle"] },
            "contains": { "type": "array", "minItems": 1 }
          },
          "required": ["contains"]
        },
        {
          "properties": {
            "type": { "enum": ["service", "plugin", "library"] }
          }
        }
      ]
    }
  }
}