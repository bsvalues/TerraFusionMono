# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/terrafusion
PGPORT=5432
PGHOST=localhost
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=terrafusion

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Service Configuration
PORT=5000
NODE_ENV=development

# Apollo Federation Gateway
GATEWAY_PORT=4000
BACKEND_GRAPHQL_URL=http://localhost:4001/graphql
GISHUB_GRAPHQL_URL=http://localhost:4002/graphql
LEVYCALC_GRAPHQL_URL=http://localhost:4003/graphql

# Mobile Sync Configuration
SYNC_INTERVAL=300000
SYNC_BATCH_SIZE=100
SYNC_TIMEOUT=30000

# Authentication
JWT_SECRET=change_this_to_a_secure_random_string
SESSION_SECRET=change_this_to_another_secure_random_string
AUTH_TOKEN_EXPIRY=24h

# Metrics and Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Feature Flags
ENABLE_OPENAI_FEATURES=true
ENABLE_MOBILE_SYNC=true
ENABLE_WEBHOOKS=true
ENABLE_METRICS=true

# AI Provider Priority (comma-separated, will try in order)
AI_PROVIDER_PRIORITY=openai,anthropic

# Logging
LOG_LEVEL=info