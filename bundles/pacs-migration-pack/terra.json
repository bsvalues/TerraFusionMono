{
  "id": "pacs-migration-pack",
  "type": "bundle",
  "name": "PACS Migration Pack",
  "version": "1.0.0",
  "description": "Comprehensive bundle for migrating legacy PACS systems to TerraFusion platform",
  "maintainer": "TerraFusion PACS Migration Team <pacs-migration@terrafusion.org>",
  "license": "MIT",
  "docs": "https://docs.terrafusion.org/bundles/pacs-migration-pack",
  "tags": [
    "pacs",
    "migration",
    "healthcare",
    "dicom",
    "imaging"
  ],
  "contains": [
    "mcps-agentmesh@1.1.0",
    "dicom-converter@2.3.1",
    "data-validator@1.2.0"
  ],
  "dependencies": [
    "terrafusion-core@3.1.0",
    "imaging-toolkit@2.0.0"
  ],
  "config": {
    "PACS_SOURCE_AET": {
      "type": "string",
      "description": "Source PACS Application Entity Title",
      "required": true
    },
    "PACS_SOURCE_HOST": {
      "type": "string",
      "description": "Source PACS host address",
      "required": true
    },
    "PACS_SOURCE_PORT": {
      "type": "number",
      "description": "Source PACS port",
      "default": 104,
      "minimum": 1,
      "maximum": 65535
    },
    "MIGRATION_BATCH_SIZE": {
      "type": "number",
      "description": "Number of studies to process in a single batch",
      "default": 50,
      "minimum": 1,
      "maximum": 500
    },
    "MIGRATION_THREADS": {
      "type": "number",
      "description": "Number of concurrent migration threads",
      "default": 4,
      "minimum": 1,
      "maximum": 16
    },
    "VALIDATION_LEVEL": {
      "type": "string",
      "description": "Level of validation to perform on migrated data",
      "default": "full",
      "enum": ["minimal", "standard", "full"]
    },
    "AUTO_RETRY_FAILED": {
      "type": "boolean",
      "description": "Automatically retry failed migrations",
      "default": true
    },
    "RETRY_MAX_ATTEMPTS": {
      "type": "number",
      "description": "Maximum number of retry attempts for failed migrations",
      "default": 3,
      "minimum": 1,
      "maximum": 10
    },
    "MIGRATION_LOG_LEVEL": {
      "type": "string",
      "description": "Log level for migration process",
      "default": "info",
      "enum": ["debug", "info", "warn", "error"]
    }
  }
}