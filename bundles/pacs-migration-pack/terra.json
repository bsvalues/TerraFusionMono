{
  "id": "pacs-migration-pack",
  "type": "bundle",
  "name": "PACS Migration Pack",
  "version": "1.0.0",
  "description": "Comprehensive bundle for PACS data migration to TerraFusion platform",
  "maintainer": "TerraFusion Team <support@terrafusion.io>",
  "license": "PROPRIETARY",
  "docs": "https://docs.terrafusion.io/pacs-migration",
  "tags": ["pacs", "migration", "dicom", "medical-imaging", "conversion"],
  "contains": [
    "mcps-agentmesh@1.0.0",
    "dicom-converter@1.0.0",
    "data-validator@1.0.0"
  ],
  "infra": {
    "helmChart": "charts/pacs-migration-pack",
    "requirements": {
      "cpu": "2",
      "memory": "4Gi",
      "storage": "20Gi"
    }
  },
  "config": {
    "logLevel": {
      "type": "string",
      "description": "Logging level for all components",
      "default": "info",
      "enum": ["debug", "info", "warn", "error"]
    },
    "sourceSystem": {
      "type": "string",
      "description": "Type of source PACS system",
      "default": "generic",
      "enum": ["generic", "orthanc", "dcm4chee", "horos", "osirix", "clearcanvas"]
    },
    "concurrentMigrations": {
      "type": "number",
      "description": "Number of concurrent migration jobs",
      "default": 5,
      "minimum": 1,
      "maximum": 20
    },
    "retentionPeriod": {
      "type": "string",
      "description": "Retention period for temporary migration data",
      "default": "7d",
      "enum": ["1d", "3d", "7d", "14d", "30d"]
    },
    "validationLevel": {
      "type": "string",
      "description": "Level of data validation to perform",
      "default": "standard",
      "enum": ["minimal", "standard", "strict"]
    },
    "networkThrottling": {
      "type": "boolean",
      "description": "Enable network throttling to limit bandwidth usage",
      "default": false
    }
  }
}