{
  "name": "mcps-agentmesh",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "services/mcps-agentmesh/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "mkdir -p dist/services/mcps-agentmesh"
          },
          {
            "command": "cp -r services/mcps-agentmesh/charts dist/services/mcps-agentmesh/"
          }
        ],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["services/mcps-agentmesh/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/services/mcps-agentmesh"],
      "options": {
        "jestConfig": "services/mcps-agentmesh/jest.config.ts"
      }
    },
    "pack": {
      "executor": "@terrafusion/nx-pack:pack",
      "outputs": ["{options.outputPath}/mcps-agentmesh"],
      "options": {
        "outputPath": "dist/pack",
        "includeFiles": [
          "terra.json",
          "README.md",
          "LICENSE",
          "charts/**/*",
          "config/**/*"
        ],
        "excludeFiles": [
          "node_modules/**/*",
          "**/*.test.ts",
          "**/*.spec.ts"
        ],
        "generateChecksums": true,
        "validateSchema": true,
        "generateSBOM": true,
        "sbomFormat": "cyclonedx"
      }
    }
  },
  "tags": []
}