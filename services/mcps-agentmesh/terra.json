{
  "id": "mcps-agentmesh",
  "type": "service",
  "name": "MCPS Agent-Mesh Service",
  "version": "1.1.0",
  "description": "Modular Clinical Processing System Agent-Mesh Service for distributed healthcare data processing",
  "maintainer": "TerraFusion Clinical Systems Team <clinicalsystems@terrafusion.org>",
  "license": "MIT",
  "docs": "https://docs.terrafusion.org/services/mcps-agentmesh",
  "tags": [
    "clinical",
    "healthcare",
    "dicom",
    "mesh",
    "agent"
  ],
  "dependencies": [
    "dicom-toolkit@3.2.1",
    "hl7-parser@2.1.0"
  ],
  "infra": {
    "helmChart": "./charts/mcps-agentmesh",
    "requirements": {
      "cpu": "2",
      "memory": "4Gi",
      "storage": "20Gi"
    },
    "ports": [
      {
        "name": "http",
        "containerPort": 8080,
        "servicePort": 80,
        "protocol": "TCP"
      },
      {
        "name": "grpc",
        "containerPort": 9090,
        "servicePort": 9090,
        "protocol": "TCP"
      }
    ]
  },
  "config": {
    "DICOM_MAX_CONNECTIONS": {
      "type": "number",
      "description": "Maximum number of concurrent DICOM connections",
      "default": 50,
      "minimum": 10,
      "maximum": 200
    },
    "HL7_TIMEOUT_MS": {
      "type": "number",
      "description": "Timeout for HL7 message processing in milliseconds",
      "default": 5000,
      "minimum": 1000,
      "maximum": 30000
    },
    "MESH_DISCOVERY_INTERVAL": {
      "type": "number",
      "description": "Interval for MESH network discovery in seconds",
      "default": 60,
      "minimum": 10,
      "maximum": 300
    },
    "LOG_LEVEL": {
      "type": "string",
      "description": "Logging level",
      "default": "info",
      "enum": ["debug", "info", "warn", "error"]
    },
    "METRICS_ENABLED": {
      "type": "boolean",
      "description": "Enable Prometheus metrics",
      "default": true
    }
  }
}